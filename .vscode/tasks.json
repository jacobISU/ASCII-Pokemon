{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Open Command Prompt",
            "type": "shell",
            "command": "cmd.exe",
            "args": ["/c", "start", "cmd.exe", "/K", "echo Command Prompt opened!"],
            "problemMatcher": []
        },
        {
            "label": "Build with Make",
            "type": "shell",
            "command": "cmd.exe",
            "args": ["/c", "start", "cmd.exe", "/K", "make"],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "C/C++: g++.exe build active file",
            "type": "shell",
            "command": "cmd.exe",
            "args": [
                "/c", "start", "cmd.exe", "/K",
                "C:\\MinGW\\bin\\g++.exe -fdiagnostics-color=always -g ${file} -o ${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}